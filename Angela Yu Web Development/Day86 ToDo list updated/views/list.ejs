<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% for (let item of newListItems) { %>
  <form action="/?_method=delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        onChange="this.form.submit()"
        value="<%= item._id %>"
        name="id"
      />
      <input type="hidden" name="listName" value="<%= listTitle %> " />
      <p><%= item.name %></p>
    </div>
  </form>
  <% } %>

  <form class="item" action="/" method="post">
    <input type="text" name="name" placeholder="New Item" autocomplete="off" />
    <input type="hidden" name="listName" value="<%= listTitle %> " />
    <button type="submit" ">+</button>
  </form>
</div>

<%- include("footer") -%>
